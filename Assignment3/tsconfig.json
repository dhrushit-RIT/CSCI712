{
	"compilerOptions": {
		"outDir": "dist",
		"target": "es2015",
		"module": "ES6",
		"moduleResolution": "classic",
		"esModuleInterop": true,
		"downlevelIteration": true,
		"allowSyntheticDefaultImports": true,
		"importHelpers": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"removeComments": true,
		"noEmitOnError": true,
		"strict": false,
		"alwaysStrict": false,
		"noImplicitAny": true,
		"typeRoots": ["node_modules/@types/"],
		"rootDir": "src",
		"strictFunctionTypes": true,
		// "noPropertyAccessFromIndexSignature": true
	},
	"include": ["server.ts", "src/**/*.ts", "knexfile.ts"],
	"exclude": ["node_modules", "dist", "__tests__", "build"]
}
